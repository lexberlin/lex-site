---
import { type InferGetStaticPropsType } from "astro";
import { type CollectionEntry, getCollection, render } from "astro:content";

// layout
import GalleryLayout from "@layouts/GalleryLayout.astro";

// components
import ExternalLink from "@components/MarkdownComponents/ExternalLink.astro";

// utils
import { filterCollectionByLanguage } from "@js/localeUtils";
import { defaultLocale } from "@config/siteSettings.json";

export async function getStaticPaths() {
	const galleries = await getCollection("gallery", ({ data }) => {
		// filter out draft services
		return data.draft !== true;
	});

	// get rid of pages from other languages and remove locale from slug
	const filteredGallery = filterCollectionByLanguage(galleries, defaultLocale);

	return filteredGallery.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<"gallery">;

const gallery = Astro.props as Props;
const { Content } = await render(gallery);
---

<GalleryLayout {...gallery.data}>
	<Content components={{ a: ExternalLink }} />
</GalleryLayout>