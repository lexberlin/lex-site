---
/**
 * * CTA card with centered text and blobs
 */

import { Icon } from "astro-icon/components";

// components
import Button from "@components/Button/Button.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";

const currLocale = getLocaleFromUrl(Astro.url);
---

<section id="cta" class="my-24 py-8 md:my-36">
	<div class="site-container">
		<div class="bg-primary-100 relative h-full w-full overflow-hidden rounded-xl">
			<!-- bottom left blob -->
			<Icon
				name="stellar/blob-1"
				class="text-primary-400/50 absolute bottom-0 left-0 aspect-square h-[100%] -translate-x-[20%] translate-y-[40%] rotate-12 md:h-[150%]"
				aria-hidden="true"
			/>

			<!-- top right blob -->
			<Icon
				name="stellar/blob-3"
				class="text-primary-400/50 absolute top-0 right-0 aspect-square h-[100%] translate-x-[20%] -translate-y-[30%] md:h-[150%]"
				aria-hidden="true"
			/>

			<!-- center card -->
			<div class="relative z-20 p-1">
				<div class="rounded-xl px-4 py-20 text-center">
					<div class="mx-auto max-w-2xl">
						<h2 class="h1">
							What are <span class="relative whitespace-nowrap">
								you
								<span>
									<Icon
										name="stellar/freehand-zig-underline"
										class="text-primary-400 absolute top-0 left-0 -z-10 h-full w-full translate-y-1/2"
										aria-hidden="true"
									/>
								</span>
							</span> waiting for?
						</h2>
						<p class="description mt-6">
							Schedule your free quote today and turn your vision into reality.
						</p>
						<div class="mt-10 flex justify-center">
							<Button
								variant="primary"
								href={"/contact"}
								arrow="right"
							>
								Schedule a free estimate
							</Button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>